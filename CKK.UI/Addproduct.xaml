        xmlns:local="clr-namespace:CKK.UI"
        mc:Ignorable="d"
        Title="Addproduct" Height="450" Width="400">
    <Grid>
        <TextBox x:Name="Name" HorizontalAlignment="Center" Margin="0,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" Height="20"/>
        <TextBox x:Name="Id" HorizontalAlignment="Center" Margin="0,143,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" Height="20"/>
        <TextBox x:Name="Price" HorizontalAlignment="Center" Margin="0,186,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" Height="20"/>
        <TextBox x:Name="Quantity" HorizontalAlignment="Center" Margin="0,227,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" Height="20"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="49,99,0,0" VerticalAlignment="Top"/>
        <Label Content="Id" HorizontalAlignment="Left" Margin="70,140,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.453,0.092"/>

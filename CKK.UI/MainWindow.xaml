<Window x:Class="CKK.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CKK.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="Login_Logo" HorizontalAlignment="Center" Height="185" Margin="0,44,0,0" VerticalAlignment="Top" Width="174" Source="/Knickknacks logo.png"/>
        <TextBox x:Name="Login" HorizontalAlignment="Center" Margin="0,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Height="20" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="Password" HorizontalAlignment="Center" Margin="0,287,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Height="20"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="282,214,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="282,261,0,0" VerticalAlignment="Top"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,312,0,0" VerticalAlignment="Top" Height="26" Width="76" Click="Button_Click"/>

    </Grid>
</Window>

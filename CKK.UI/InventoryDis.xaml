<Window x:Class="CKK.UI.InventoryDis"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CKK.UI"
        mc:Ignorable="d"
        Title="InventoryDis" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="SearchByName" HorizontalAlignment="Left" Margin="10,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248"/>
        <TextBox x:Name="SearchByName_Copy" HorizontalAlignment="Left" Margin="10,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248"/>
        <Label Content="Search by name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.419,0.255"/>
        <Label Content="Search by id" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top"/>
        <Button x:Name="AddNewProductBut" Content="Add new product" HorizontalAlignment="Left" Margin="10,367,0,0" VerticalAlignment="Top" Click="AddNewProductBut_Click" />
        <Button x:Name="RemoveProductBut" Content="Remove product" HorizontalAlignment="Left" Margin="111,367,0,0" VerticalAlignment="Top"/>
        <ListView x:Name="bInventoryList" Margin="10,105,10,72">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="600" Header="Name" DisplayMemberBinding="{Binding Path=Product.Name}" />
                    <GridViewColumn Width="75" Header="Id" DisplayMemberBinding="{Binding Path=Product.Id}" />
                    <GridViewColumn Width="75" Header="Quantity" DisplayMemberBinding="{Binding Path=Quantity}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
